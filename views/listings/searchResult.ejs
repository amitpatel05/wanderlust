<%- include("/layouts/boilerplate") %>

<div class="container mt-4">
  <h2 class="mb-3">Search Results for "<%= searchQuery %>"</h2>

  <% if(matchingListings.length > 0) { %>
  <div class="row">
    <% matchingListings.forEach(listing => { %>
    <div class="col-md-4">
      <div class="card mb-3">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="<%= listing.title %>"
        />
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text">
            <%= listing.location %>, <%= listing.country %>
          </p>
          <a href="/listings/<%= listing._id %>" class="btn btn-primary btn-sm"
            >View Details</a
          >
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <p class="text-muted">No results found for your search!</p>
  <% } %>
</div>
