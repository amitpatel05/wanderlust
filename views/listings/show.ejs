<% layout("/layouts/boilerplate") %>
<div class="container mt-3 mb-4">
  <div class="row col-12 offset-1 card-position">
    <div class="col-lg-10 col-md-8">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
          <div class="col-8 offset-3 mt-4 mb-3">
            <h3>&#9733; <%= listing.title %></h3>
          </div>
          <div class="card mt-2 col-6 offset-3 show-card listing-card">
            <img
              src="<%= listing.image.url || listing.image %>"
              class="card-img-top show-img"
              alt="listing_image"
            />
            <div class="card-body">
              <p class="card-text ryt-p">
                ~ <i>@<%= listing.owner.username %></i>
              </p>
              <p class="card-text">&#8226; <%= listing.description %></p>
              <p class="card-text">
                &#8226; &#8377; <%= listing.price.toLocaleString("en-IN") %> /
                night
              </p>
              <p class="card-text">&#8226; <%= listing.location %></p>
              <p class="card-text">&#8226; <%= listing.country %></p>
              <p class="card-text">&#8226; <%= listing.category %></p>
            </div>
          </div>

          <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
          <div class="btns btn-outline-dark">
            <a
              href="/listings/<%= listing._id %>/edit"
              class="btn add-btn offset-3 edit-btn"
              >Edit</a
            >
            <form
              method="POST"
              action="/listings/<%=listing._id%>?_method=DELETE"
            >
              <button class="btn dlt-btn offset-3">Delete</button>
            </form>
          </div>
          <% } %>

          <div class="col-8 offset-3 mb-3">
            <% if(currUser) { %>
            <hr />
            <h4>Leave a Review</h4>
            <form
              action="/listings/<%=listing._id%>/reviews"
              method="POST"
              novalidate
              class="needs-validation"
            >
              <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                  <input
                    type="radio"
                    id="no-rate"
                    class="input-no-rate"
                    name="review[rating]"
                    value="1"
                    checked
                    aria-label="No rating."
                  />
                  <input
                    type="radio"
                    id="first-rate1"
                    name="review[rating]"
                    value="1"
                  />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input
                    type="radio"
                    id="first-rate2"
                    name="review[rating]"
                    value="2"
                  />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input
                    type="radio"
                    id="first-rate3"
                    name="review[rating]"
                    value="3"
                  />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input
                    type="radio"
                    id="first-rate4"
                    name="review[rating]"
                    value="4"
                  />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input
                    type="radio"
                    id="first-rate5"
                    name="review[rating]"
                    value="5"
                  />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>
              <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea
                  name="review[comment]"
                  id="comment"
                  cols="30"
                  rows="5"
                  class="form-control"
                  required
                ></textarea>
                <div class="invalid-feedback">
                  * Please add some comments for review
                </div>
              </div>
              <button class="btn add-btn">Submit</button>
              <button type="reset" class="btn reset-btn ms-3">Reset</button>
            </form>
            <hr />
            <% } %> <% if (listing.reviews.length > 0) { %>
            <div class="row">
              <p><b>All Reviews</b></p>
              <% for(review of listing.reviews) { %>
              <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                  <div class="review-info">
                    <h5 class="card-title mt-2 author-name">
                      @<%= review.author.username %>
                    </h5>
                    <div class="time-info">
                      <p><%= review.createdAt.toString().split(" ")[4] %></p>
                      <p class="review-date">
                        <%= review.createdAt.toString().split(" ").slice(0,
                        4).join("-")%>
                      </p>
                    </div>
                  </div>
                  <p
                    class="starability-result card-text"
                    data-rating="<%= review.rating %>"
                  ></p>
                  <p class="card-text"><%= review.comment %></p>
                </div>
                <form
                  class="mb-3"
                  method="POST"
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                >
                  <% if(currUser && review.author.equals(currUser._id)) { %>
                  <div class="ryt-btn">
                    <button class="btn btn-sm dlt-btn mt-2">Delete</button>
                  </div>
                  <% } %>
                </form>
              </div>
              <% } %>
            </div>
            <% } %>
          </div>
          <div class="col-8 offset-3 mb-3">
            <h3 class="mb-3">Where you'll be</h3>
            <div id="searchBox">
              <input
                type="text"
                class="search-inp"
                id="address"
                placeholder="Search Location"
              />
              <button
                onclick="searchLocation()"
                class="btn search-btn"
                type="submit"
              >
                <i class="fa-solid fa-magnifying-glass"></i><b>Search</b>
              </button>
            </div>
            <div id="map"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const listingLocation = "<%= listing.location %>";
</script>
<script src="/js/map.js"></script>
